<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="@color/common_text_color_333333"
            android:text="小区没有文明养狗"
            />
        <TextView
            android:id="@+id/tv_area_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/common_text_color_999999"
            android:text="参与调查人数：500"
            />
        <TextView
            android:id="@+id/tv_up_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/common_text_color_999999"
            android:text="调查日期：2016年8月1日"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/common_padding"
        android:background="@color/common_color_61ca8b"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:text="查看"
    />
</LinearLayout>