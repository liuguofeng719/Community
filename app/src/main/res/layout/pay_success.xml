<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_padding"
        android:background="@color/button_text_color">
        <TextView
            android:id="@+id/tv_header_title"
            style="@style/header_title" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_pay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/success" />

        <TextView
            android:id="@+id/tv_pay_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您，付款成功" />

    </LinearLayout>
    <TextView
        android:id="@+id/content_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="56dp"
        android:text="恭喜您，付款成功"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <Button
            android:id="@+id/btn_back_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/common_color_61ca8b"
            android:gravity="center"
            android:padding="15dp"
            android:text="返回首页"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_myorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/common_color_f8914c"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="查看订单" />
    </LinearLayout>
</LinearLayout>